{
  "name": "@pyriter/anchorjs",
  "version": "2.0.0",
  "description": "Dependency injection for Node",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pyriter/anchorjs.git"
  },
  "author": "Phong Vuong",
  "license": "GPL",
  "private": false,
  "bugs": {
    "url": "https://github.com/pyriter/anchorjs/issues"
  },
  "homepage": "https://github.com/pyriter/anchorjs#readme",
  "scripts": {
    "test": "jest --silent --coverage --runInBand ",
    "test-dev": "jest --watch --silent --detectOpenHandles --coverage",
    "clean": "jest --clearCache && rimraf dist",
    "build": "npm run rimraf dist && npx tsc && cp package.json ./dist/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "rimraf": "rimraf",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^18.11.3",
    "husky": ">=6",
    "jest": "^27.4.2",
    "lint-staged": ">=10",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "collectCoverage": true,
    "clearMocks": true,
    "resetMocks": true,
    "resetModules": true,
    "testEnvironment": "node",
    "coverageReporters": [
      "html"
    ],
    "testTimeout": 300000,
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "files": [
    "dist/**/*"
  ]
}
